<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GojekChallenge">
    <!--toolbar guidline-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="66dp" />
    <!--toolbar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/ijo_gojek"
        app:layout_constraintBottom_toTopOf="@id/guideline_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/view_search_bar"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_search_bar_gojek"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:queryHint="@string/search_hint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_account_gojek"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_account_gojek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ijo_gojek"
            android:contentDescription="@string/condesc_account_gojek"
            android:src="@drawable/ic_account_48"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_gojek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--body-->
    <ScrollView
        android:id="@+id/scroll_body_gojek"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_balance"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_balance_gojek"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--rencananya slider-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_balance_slider"
                    android:layout_width="160dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <!--isi slider-->
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    app:layout_constraintStart_toEndOf="@id/constraint_balance_slider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/image_icon_bayar"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_balance_icon_gojek"
                    android:scaleType="center"
                    android:src="@drawable/ic_bayar_16"
                    app:layout_constraintBottom_toTopOf="@id/text_balance_bayar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/image_icon_isi_saldo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/biruu_gojek" />

                <TextView
                    android:id="@+id/text_balance_bayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/string_bayar"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/image_icon_bayar"
                    app:layout_constraintStart_toStartOf="@id/image_icon_bayar"
                    app:layout_constraintTop_toBottomOf="@id/image_icon_bayar"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/image_icon_isi_saldo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_balance_icon_gojek"
                    android:scaleType="center"
                    android:src="@drawable/ic_isi_saldo_16"
                    app:layout_constraintBottom_toTopOf="@id/text_balance_bayar"
                    app:layout_constraintEnd_toStartOf="@id/image_icon_explore"
                    app:layout_constraintStart_toEndOf="@id/image_icon_bayar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/biruu_gojek" />

                <TextView
                    android:id="@+id/text_balance_isi_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/string_isi_saldo"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/image_icon_isi_saldo"
                    app:layout_constraintStart_toStartOf="@id/image_icon_isi_saldo"
                    app:layout_constraintTop_toBottomOf="@id/image_icon_isi_saldo"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/image_icon_explore"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_balance_icon_gojek"
                    android:scaleType="center"
                    android:src="@drawable/ic_rocket_explore_16"
                    app:layout_constraintBottom_toTopOf="@id/text_balance_bayar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_icon_isi_saldo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/biruu_gojek" />

                <TextView
                    android:id="@+id/text_balance_eksplor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/string_eksplor"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/image_icon_explore"
                    app:layout_constraintStart_toStartOf="@id/image_icon_explore"
                    app:layout_constraintTop_toBottomOf="@id/image_icon_explore"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--main menu-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_main_menu"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_balance"
                app:layout_constraintStart_toStartOf="@id/constraint_balance"
                app:layout_constraintEnd_toEndOf="@id/constraint_balance">

                <!--main menu baris satu-->
                <ImageView
                    android:id="@+id/image_main_menu_goride"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintEnd_toStartOf="@id/image_main_menu_gocar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_main_menu_goride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/text_goride"
                    app:layout_constraintEnd_toEndOf="@id/image_main_menu_goride"
                    app:layout_constraintStart_toStartOf="@id/image_main_menu_goride"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_goride" />

                <ImageView
                    android:id="@+id/image_main_menu_gocar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintEnd_toStartOf="@id/image_main_menu_gofood"
                    app:layout_constraintStart_toEndOf="@id/image_main_menu_goride"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_main_menu_gocar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/text_gocar"
                    app:layout_constraintEnd_toEndOf="@id/image_main_menu_gocar"
                    app:layout_constraintStart_toStartOf="@id/image_main_menu_gocar"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_gocar" />

                <ImageView
                    android:id="@+id/image_main_menu_gofood"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintEnd_toStartOf="@id/image_main_menu_gosend"
                    app:layout_constraintStart_toEndOf="@id/image_main_menu_gocar"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_main_menu_gofood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/text_gofood"
                    app:layout_constraintEnd_toEndOf="@id/image_main_menu_gofood"
                    app:layout_constraintStart_toStartOf="@id/image_main_menu_gofood"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_gofood" />

                <ImageView
                    android:id="@+id/image_main_menu_gosend"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_main_menu_gofood"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_main_menu_gosend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/text_gosend"
                    app:layout_constraintEnd_toEndOf="@id/image_main_menu_gosend"
                    app:layout_constraintStart_toStartOf="@id/image_main_menu_gosend"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_gosend" />
                <!-- main menu baris dua-->
                <ImageView
                    android:id="@+id/image_main_menu_gomart"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/image_main_menu_goride"
                    app:layout_constraintStart_toStartOf="@+id/image_main_menu_goride"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_goride" />

                <TextView
                    android:id="@+id/text_main_menu_gomart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/text_gomart"
                    app:layout_constraintEnd_toEndOf="@id/image_main_menu_gomart"
                    app:layout_constraintStart_toStartOf="@id/image_main_menu_gomart"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_gomart" />

                <ImageView
                    android:id="@+id/image_main_menu_gopulsa"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/text_main_menu_gocar"
                    app:layout_constraintStart_toStartOf="@id/text_main_menu_gocar"
                    app:layout_constraintTop_toBottomOf="@+id/image_main_menu_gocar" />

                <TextView
                    android:id="@+id/text_main_menu_gopulsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/text_gopulsa"
                    app:layout_constraintEnd_toEndOf="@id/image_main_menu_gopulsa"
                    app:layout_constraintStart_toStartOf="@id/image_main_menu_gopulsa"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_gopulsa" />

                <ImageView
                    android:id="@+id/image_main_menu_checkin_pedulilindungi"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/text_main_menu_gofood"
                    app:layout_constraintStart_toStartOf="@id/text_main_menu_gofood"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_gofood" />

                <TextView
                    android:id="@+id/text_main_menu_checkin_pedulilindungi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/text_check_in"
                    app:layout_constraintEnd_toEndOf="@id/image_main_menu_checkin_pedulilindungi"
                    app:layout_constraintStart_toStartOf="@id/image_main_menu_checkin_pedulilindungi"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_checkin_pedulilindungi" />

                <ImageView
                    android:id="@+id/image_main_menu_lainnya"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/text_main_menu_gosend"
                    app:layout_constraintStart_toStartOf="@id/text_main_menu_gosend"
                    app:layout_constraintTop_toBottomOf="@+id/image_main_menu_gosend" />

                <TextView
                    android:id="@+id/text_main_menu_lainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/text_lainnya"
                    app:layout_constraintEnd_toEndOf="@id/image_main_menu_lainnya"
                    app:layout_constraintStart_toStartOf="@id/image_main_menu_lainnya"
                    app:layout_constraintTop_toBottomOf="@id/image_main_menu_lainnya" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_menu_harta_karun"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraint_main_menu">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dummy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>